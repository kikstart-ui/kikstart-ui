{
  "name": "kikstart-ui",
  "version": "0.0.0-development",
  "description": "Set of ready to use declarative Angular UI components.",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "prettier": "prettier --write \"**/*.{js,json,css,scss,less,md,ts,html,component.html}\"",
    "compodoc": "npx compodoc -p projects/ui/tsconfig.lib.json -d src/app/api-docs/ -e json",
    "compodoc:watch": "nodemon -x 'yarn compodoc' --watch projects --ext ts",
    "start": "ng serve",
    "build": "yarn build:lib && yarn build:demo",
    "build:demo": "ng build --prod",
    "postbuild:demo": "cp -v dist/kikstart-ui/index.html dist/kikstart-ui/404.html",
    "prebuild:lib": "cp LICENSE README.md projects/ui/",
    "build:lib": "ng-packagr -p projects/ui/ng-package.json",
    "postbuild:lib": "yarn build:lib:scss",
    "build:lib:scss": "scss-bundle -p scss-bundle.config.json",
    "test": "true # ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "semantic-release": "cd dist/ui && semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "8.2.14",
    "@angular/common": "8.2.14",
    "@angular/compiler": "8.2.14",
    "@angular/core": "8.2.14",
    "@angular/forms": "8.2.14",
    "@angular/platform-browser": "8.2.14",
    "@angular/platform-browser-dynamic": "8.2.14",
    "@angular/router": "8.2.14",
    "@ngx-formly/bootstrap": "5.5.9",
    "@ngx-formly/core": "5.5.9",
    "bootstrap": "4.4.1",
    "bootswatch": "4.4.1",
    "font-awesome": "4.7.0",
    "ngx-bootstrap": "5.3.2",
    "ngx-markdown": "8.2.1",
    "ngx-timeago": "1.0.3",
    "ngx-toastr": "11.3.0",
    "rxjs": "6.5.4",
    "tslib": "1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.803.23",
    "@angular-devkit/build-ng-packagr": "0.803.23",
    "@angular/cli": "8.3.23",
    "@angular/compiler-cli": "8.2.14",
    "@angular/language-service": "8.2.14",
    "@compodoc/compodoc": "1.1.11",
    "@ctrl/ngx-numbered-codeblock": "2.0.0",
    "@types/jasmine": "3.5.1",
    "@types/jasminewd2": "2.0.8",
    "@types/node": "13.1.8",
    "codelyzer": "5.2.1",
    "husky": "4.0.10",
    "jasmine-core": "3.5.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "4.4.1",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage-istanbul-reporter": "2.1.1",
    "karma-jasmine": "3.1.0",
    "karma-jasmine-html-reporter": "1.5.1",
    "lint-staged": "9.5.0",
    "ng-packagr": "5.7.1",
    "prettier": "1.19.1",
    "prismjs": "1.19.0",
    "protractor": "5.4.2",
    "scss-bundle": "3.0.2",
    "semantic-release": "16.0.2",
    "ts-node": "8.6.2",
    "tsickle": "0.38.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "~3.5.3"
  },
  "resolutions": {
    "terser-webpack-plugin": "2.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,less,md,ts,html,component.html}": [
      "prettier --write",
      "git add"
    ],
    "projects/ui/*.{js,json,css,scss,less,md,ts,html,component.html}": [
      "yarn compodoc",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/beeman/kikstart-ui.git"
  }
}
